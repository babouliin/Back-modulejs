{
    "name": "back-modulejs",
    "version": "0.0.1",
    "description": "Node.js API with Koa-Smart, Sequelize & Postgresql",
    "author": "epitech",
    "license": "ISC",
    "engines": {
        "node": "16.13.0"
    },
    "scripts": {
        "start": "cross-env NODE_ENV=development nodemon --exec babel-node src/index.js",
        "start:windows": "cross-env NODE_ENV=development nodemon --exec npx babel-node src/index.js",
        "prod": "cross-env NODE_ENV=production node dist/index.js",
        "_rm-build-prod": "rimraf dist",
        "_build-prod": "cross-env NODE_ENV=production babel config src --out-dir dist --copy-files",
        "build-prod": "npm run _rm-build-prod && npm run _build-prod",
        "lint": "eslint src"
    },
    "dependencies": {
        "@babel/cli": "^7.10.5",
        "@babel/plugin-proposal-class-properties": "^7.10.4",
        "@babel/plugin-proposal-decorators": "^7.10.5",
        "@babel/plugin-transform-runtime": "^7.11.0",
        "@babel/preset-env": "^7.11.0",
        "@babel/runtime": "^7.15.4",
        "@prisma/client": "^3.4.1",
        "bcrypt": "^5.0.1",
        "config": "^3.3.6",
        "cross-env": "^7.0.3",
        "dotenv": "^10.0.0",
        "jsonwebtoken": "^8.5.1",
        "koa-smart": "^3.0.0",
        "prisma": "^3.4.1",
        "rimraf": "^3.0.2"
    },
    "devDependencies": {
        "@babel/node": "^7.10.5",
        "babel-eslint": "^10.1.0",
        "eslint": "^5.16.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "nodemon": "^1.19.1"
    },
    "nodemonConfig": {
        "ignore": [
            "apidoc"
        ]
    }
}
