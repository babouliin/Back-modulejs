generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(uuid())
  email              String    @unique
  pseudo             String    @unique
  password           String
  chats_as_initiator Chat[]    @relation("chat_initiator_user")
  chats_as_target    Chat[]    @relation("chat_target_user")
  messages_sent      Message[] @relation("message_sent")
  messages_received  Message[] @relation("message_received")
}

model Chat {
  id                Int       @id @default(autoincrement())
  chat_initiator_id String
  chat_initiator    User      @relation("chat_initiator_user", fields: [chat_initiator_id], references: [id])
  chat_target_id    String
  chat_target       User      @relation("chat_target_user", fields: [chat_target_id], references: [id])
  updatedAt         DateTime
  messages          Message[]
}

model Message {
  id           Int      @id @default(autoincrement())
  text         String
  timestamp    DateTime
  chat_id      Int
  chat         Chat     @relation(fields: [chat_id], references: [id])
  from_user_id String
  from_user    User     @relation("message_sent", fields: [from_user_id], references: [id])
  to_user_id   String
  to_user      User     @relation("message_received", fields: [to_user_id], references: [id])
}
